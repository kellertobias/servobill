{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/common/**/*.ts",
    "src/common/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "sst.config.ts", "stack/parts/**/*", "**/*.e2e.ts", "**.*.spec.ts"]
}
