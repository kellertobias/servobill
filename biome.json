{
	"files": {
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"stack/**/*.ts",
			"sst.config.ts"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"assist": {},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "off",
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"useArrowFunction": "off",
				"noStaticOnlyClass": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noConfusingVoidType": "off"
			},
			"correctness": {
				"useHookAtTopLevel": "off",
				"noUnusedVariables": {
					"level": "warn",
					"options": {
						"ignoreRestSiblings": true
					}
				},
				"noUnusedFunctionParameters": {
					"level": "off"
				},
				"useExhaustiveDependencies": "warn"
			},
			"performance": {
				"noImgElement": "off"
			},
			"a11y": {
				"useValidAnchor": "off",
				"noStaticElementInteractions": "off",
				"useButtonType": "warn",
				"useSemanticElements": "off",
				"noLabelWithoutControl": "off",
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off",
				"useAltText": "off"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all",
			"arrowParentheses": "always",
			"semicolons": "always"
		}
	}
}
